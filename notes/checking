app Apps::Checkbook {
    controller PayeePayor {
        controls_table payeepayor;
        uses AutoCrud, AutoForm;
        main_displays id, descr;
    }

    table payeepayor {
        field id    { is int4, primary_key, assign_by_sequence; }
        field descr {
            is varchar;
            update_with textarea( rows: 5, cols: 45 );
        }
    }
}
